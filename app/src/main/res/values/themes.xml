<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Githubapp" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.Githubapp">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>

    <style name="Theme.Githubapp.NoActionBar" parent="Theme.Githubapp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>